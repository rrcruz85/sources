<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_oemedical_appointment_tree" model="ir.ui.view">
			<field name="name">oemedical.appointment.tree</field>
			<field name="model">oemedical.appointment</field>			 
			<field name="arch" type="xml">
				<tree string="Appointments" colors="red:state=='canceled';green:state =='done';blue:state == 'draft'; brown:state == 'confirm'; gray:state == 'waiting'; darkyellow:state=='in_consultation'">
					<field name="appointment_time" invisible="1"/> 
					<field name="start_date" /> 
					<field name="start_time" widget="float_time"/> 
					<field name="patient_id" /> 
					<field name="specialty_id" /> 
					<field name="doctor_id" />
					<field name="type" />
					<field name="state" />
					<button name="button_back" icon="gtk-go-back" states="confirm,waiting,in_consultation,done,canceled" string="Back"  type="object" groups="oemedical.doctor_group"/>
                    <button name="button_confirm" icon="STOCK_YES" states="draft" string="Confirm" class="oe_highlight"  type="object" />
                    <button name="button_waiting" icon="kanban-pause" states="confirm" string="Waiting" class="oe_highlight"  type="object" groups="oemedical.doctor_group"/>
                    <button name="button_in_consultation" icon="gtk-execute" states="waiting" string="In Consultation" class="oe_highlight"  type="object" groups="oemedical.doctor_group"/>
                    <button name="button_done" icon="terp-camera_test" states="in_consultation" string="Done" class="oe_highlight"  type="object" groups="oemedical.doctor_group"/>
                    <button name="button_cancel" icon="terp-gtk-stop" states="confirm, in_consultation" string="Cancel"  type="object" />        
				</tree>
			</field>
		</record>

		<record id="view_oemedical_appointment_form" model="ir.ui.view">
			<field name="name">oemedical.appointment.form</field>
			<field name="model">oemedical.appointment</field>			 
			<field name="arch" type="xml">
				<form string="Appointment"  version="7.0">
                    <header>
                        <button name="button_back" states="waiting,in_consultation,done" string="Back"  type="object" groups="oemedical.doctor_group"/>
                        <button name="button_confirm" states="draft" string="Confirm" class="oe_highlight"  type="object" />
                        <button name="button_waiting" states="confirm" string="Waiting" class="oe_highlight"  type="object" groups="oemedical.doctor_group"/>
                        <button name="button_in_consultation" states="waiting" string="In Consultation" class="oe_highlight"  type="object" groups="oemedical.doctor_group"/>
                        <button name="button_done" states="in_consultation" string="Done" class="oe_highlight"  type="object" groups="oemedical.doctor_group"/>
                        <button name="button_cancel" states="draft,confirm" string="Cancel"  type="object" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,waiting,in_consultation,done,canceled" statusbar_colors='{"draft":"blue","done":"green","canceled":"red","confirm":"yellow","waiting":"gray", "in_consultation":"gray"}'/>
                    </header>
                    <sheet>
					    <group col="4">
					        <field name="patient_id" attrs="{'readonly':[('state','!=','draft')]}" options="{'create': false, 'create_edit': false}"/>
							<field name="specialty_id" on_change="onchange_specialty_id(specialty_id, doctor_id)" attrs="{'readonly':[('state','in',('confirm','waiting','in_consultation','done','canceled'))]}" options="{'create': false, 'create_edit': false}"/>
							<field name="doctor_id" on_change="onchange_patient_doctor(patient_id, doctor_id)" attrs="{'readonly':[('state','in',('confirm','waiting','in_consultation','done','canceled'))]}" options="{'create': false, 'create_edit': false}"/>
							<field name="type" attrs="{'readonly':[('state','in',('confirm','waiting','in_consultation','done','canceled'))]}"/>
							<field name="start_date" attrs="{'readonly':[('state','in',('confirm','waiting','in_consultation','done','canceled'))]}"/>
							<field name="is_planned" attrs="{'readonly':[('state','in',('confirm','waiting','in_consultation','done','canceled'))]}"/>
							<newline/>
					        <field name="start_time" widget="float_time" attrs="{'readonly':[('state','in',('waiting','in_consultation','done','canceled'))]}"/>
							<newline/>										    
							<field name="end_date" attrs="{'invisible':[('state','!=','done')],'readonly':[('state','==','done')]}"  />
							<field name="stimated_duration" groups="oemedical.doctor_group"/>
							<newline/>
							<field name="next_appointment_date" attrs="{'invisible':[('state','=','draft')]}" groups="oemedical.doctor_group"/>
							<newline/>
							<field name="next_appointment_hour" widget="float_time" attrs="{'invisible':[('state','=','draft')]}" groups="oemedical.doctor_group"/>
                        </group>
						<group col="4" string="Motive Of the Appointment">
							<field name="motive" nolabel="1" attrs="{'readonly':[('state','in',('waiting','in_consultation','done','canceled'))]}" />
						</group>
                        <notebook>
                            <page string="Patient Information" groups="oemedical.doctor_group,base.group_erp_manager,base.group_system">
							    <group col="8" string="Signos vitales y mediciones" attrs="{'invisible':[('state','in',('draft','confirm','canceled'))]}" groups="oemedical.doctor_group,base.group_erp_manager,base.group_system">
	                        		<group col="4">
	                        			<field name="pat_info" col="1" colspan="4"/>
		                                <field name="ppm_info" col="1" colspan="4"/>
		                                <field name="ppr_info" col="1" colspan="4"/>
	                        		</group>	                        		
		                            <group col="2">
		                                <field name="tem_info" col="1" colspan="2"/>
		                                <field name="tem2_info" col="1" colspan="2"/>
		                                <field name="pes_info" col="1" colspan="2"/>
		                                <field name="size_info" col="1" colspan="2"/>
		                            </group>
	                            </group>
								<group string="Enfermedades o padecimientos" colspan="4" groups="oemedical.doctor_group,base.group_erp_manager,base.group_system">
								    <group>									      
										<field name="cardiopatia"/>
										<field name="diabetes"/>
										<field name="enf_car"/>	 
										<field name="hipertension"/>	
										<field name="antibotic_allergic"/>	 
										<field name="anesthesia_allergic"/>	
										<field name="hemorrhage"/>										         				  
										<field name="other"/>
									</group>									
									<group>												          				  
										<field name="cancer"/>	         				  
										<field name="tuberculosis"/>	         				  
										<field name="enf_men"/>	         				  
										<field name="enf_inf"/>
										<field name="mal_for"/>
										<field name="vih_sida"/>	 
										<field name="asma"/>
									</group>									 	
								</group>
								<label for="others_antecedents" attrs="{'invisible':[('other','=',False)]}" groups="oemedical.doctor_group,base.group_erp_manager,base.group_system"/>
								<field name="others_antecedents" nolabel="1" colspan="4" attrs="{'invisible':[('other','=',False)]}" groups="oemedical.doctor_group,base.group_erp_manager,base.group_system"/>
								<group col="4" string="Enfermedad Actual" groups="oemedical.doctor_group,base.group_erp_manager,base.group_system">
					                <field name="info_diagnosis" colspan="4" nolabel="1"/>
                                </group>								
                            </page>
							<page string="Treatments" attrs="{'invisible':[('state','in',('draft','confirm','canceled'))]}" groups="oemedical.doctor_group,base.group_erp_manager,base.group_system">
                                <field name="treatment_ids" nolabel="1" context="{'appointment_id': active_id}"/>
                            </page>
                            <page string="Comments" attrs="{'invisible':[('state','=','draft')]}" groups="oemedical.doctor_group,base.group_erp_manager,base.group_system">
								<field name="comments" nolabel="1"/>
							</page>
						</notebook>
                    </sheet>
				</form>
			</field>
		</record>

        <record id="view_oemedical_appointment_calendar" model="ir.ui.view">
            <field name="name">oemedical.appointment.calendar</field>
            <field name="model">oemedical.appointment</field>            
            <field name="arch" type="xml">
                <calendar color="patient_id" date_start="appointment_time" string="Appointments" version="7.0">
				    <field name="patient_id"/> 				    
                </calendar>
            </field>
        </record>

		<record id="view_oemedical_appointment_search" model="ir.ui.view">
			<field name="name">oemedical.appointment.search</field>
			<field name="model">oemedical.appointment</field>			 
			<field name="arch" type="xml">
				<search string="Appointments">					 
					<field name="patient_id" />
					<field name="doctor_id" />
					<field name="specialty_id" />
					<field name="type" />
					<field name="state" />
					<field name="appointment_time" />					
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Doctor" domain="[]" context="{'group_by':'doctor_id'}" />
						<filter string="Patient" domain="[]" context="{'group_by':'patient_id'}" />
						<filter string="Specialty" domain="[]" context="{'group_by':'specialty_id'}" />
						<filter string="Type" domain="[]" context="{'group_by':'type'}" />
						<filter string="State" domain="[]" context="{'group_by':'state'}" />						  
					</group>
				</search>
			</field>
		</record>
           
