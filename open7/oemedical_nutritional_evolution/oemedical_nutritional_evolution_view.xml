	<data>
		<record id="view_oemedical_nutritional_evolution_tree" model="ir.ui.view">
			<field name="name">oemedical.nutritional.evolution.tree</field>
			<field name="model">oemedical.nutritional.evolution</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Evolucion">
					<!--field name="cir_date" /-->
					<!--field name="cir_tip" /-->
					<field name="date_nut" />
					<field name="doctor" />
					<!--field name="directions" /-->
					<!--field name="eva_value" /-->
				</tree>
			</field>
		</record>

		<record id="view_oemedical_nutritional_evolution_form" model="ir.ui.view">
			<field name="name">oemedical.nutritional.evolution.form</field>
			<field name="model">oemedical.nutritional.evolution</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Evolucion Nutricional" version="7.0">
				<sheet>
					<!--div class="oe_right oe_button_box" name="buttons">
                        <button type="object"
                            name="evolution_print"
                            string="Imprimir"/>
                    </div-->
					<group col="2" colspan="2">
						<field name="patient_id" />
						<field name="doctor" />
					</group>
					<newline/>
					<group col="4" colspan="2">	
						<field name="date_nut" readonly="0"/>
						<field name="pso_act" />
			            <!--field name="pso_ant" /-->
			            <field name="pgr_act" />
			            <field name="pgr_ant" />
			            <field name="cin_act" />
			            <field name="cin_ant" />
			        </group>
			        <newline/>
			        <group col="4" colspan="2">    
			            <field name="imc_cot" />
			            <field name="exp_per" />
			        </group>
			        <newline/>    
			        <group col="4" colspan="2"> 
                                    <field name="date_control" />    
			            <field name="cita" />
			            <field name="tip_dta" />
			            <field name="car_die" />
			        </group>
			        <newline/> 
			        <group col="4" colspan="2">
			            <field name="sup_prt" />
			            <field name="sup_vit" />
			        </group>
			        <newline/> 
			        <group col="4" colspan="2">
			            <field name="observ" />
              			    <field name="hidratacion"/>
              			    <field name="eje_freq" />
                                    <field name="eje_dia" />
			            <field name="tie_eje" />
				</group>
					
				</sheet>
				</form>
			</field>
		</record>
		
