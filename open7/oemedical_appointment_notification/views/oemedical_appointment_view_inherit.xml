<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="view_oemedical_appointment_form" model="ir.ui.view">
            <field name="name">oemedical.appointment.form</field>
            <field name="model">oemedical.appointment</field>
            <field name="inherit_id" ref="oemedical.view_oemedical_appointment_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form/header/button[@name='button_confirm']" position="after">
                        <button name="button_send_notification" states="draft,confirm" string="Send notification..."
                                class="oe_highlight"  type="object" groups="base.group_user" context="{'appointment_id':active_id}"/>
                    </xpath>
                    
                </data>
            </field>
        </record>
        
        <record id="view_oemedical_patient_form_inherit" model="ir.ui.view">
            <field name="name">oemedical.patient.form.inherit</field>
            <field name="model">oemedical.patient</field>
            <field name="inherit_id" ref="oemedical.view_oemedical_patient_form"/>
            <field name="arch" type="xml">
                <data>                    
                    <xpath expr="//field[@name='age']" position="after">
                        <newline/>
                        <button name="call_notificator" string="Call Notificator"
                                class="oe_highlight"  type="object"/>
                    </xpath>
                </data>
            </field>
        </record>
        
        <!-- Notification -->
        
        <record id="view_oemedical_appointment_notification_tree" model="ir.ui.view">
            <field name="name">oemedical.appointment.notification.tree</field>
            <field name="model">oemedical.appointment.notification</field>             
            <field name="arch" type="xml">
                <tree string="Patient Appointment Notification">
                 	 <field name="notify_before"/>
                 	 <field name="unit_time"/>
                 	 <field name="first_monthly"/>
	                 <field name="third_monthly"/>
	                 <field name="sixth_monthly"/>
	                 <field name="nineth_monthly"/>
	                 <field name="yearly"/>
                 	 <field name="show_notification"/>
                 	 <field name="show_unit_time"/>
                 	 <field name="company_id"/>                 	     
                </tree>
            </field>
        </record>
        
        <record id="view_oemedical_appointment_notification_form" model="ir.ui.view">
            <field name="name">oemedical.appointment.notification.form</field>
            <field name="model">oemedical.appointment.notification</field>             
            <field name="arch" type="xml">
                <form string="Patient Appointment Notifications"  version="7.0">
                 	<sheet>
                 	    <group col="4" colspan="4"> 
	                 	    <field name="notify_before"/>
	                 	    <field name="unit_time"/>
                 	    </group>
                 	    <newline/>
                 	    <group col="4" colspan="4">                 	    
	                 	    <field name="first_monthly"/>
	                 	    <field name="third_monthly"/>
	                 	    <field name="sixth_monthly"/>
	                 	    <field name="nineth_monthly"/>
	                 	    <field name="yearly"/>
                 	    </group>
                 	    <newline/>
                 	    <group col="4" colspan="4"> 
	                 	    <field name="show_notification"/>
	                 	    <field name="show_unit_time"/>
	                 	    <newline/>
	                 	    <field name="company_id"/>   
                 	    </group>              	     
                 	</sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_oemedical_appointment_notification_view">
			<field name="name">Patient Appointment Notifications</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">oemedical.appointment.notification</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<menuitem id="oemedical_root_patient_notification" name="Appointment Notifications"
			parent="oemedical.oemedical_root_sub" action="act_oemedical_appointment_notification_view"
			sequence="300" />
        
                        
    </data>
</openerp>
