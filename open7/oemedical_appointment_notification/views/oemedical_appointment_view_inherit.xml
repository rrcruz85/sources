<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>
        <record id="view_oemedical_appointment_form" model="ir.ui.view">
            <field name="name">oemedical.appointment.form</field>
            <field name="model">oemedical.appointment</field>
            <field name="inherit_id" ref="oemedical.view_oemedical_appointment_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form/header/button[@name='button_confirm']" position="after">
                        <button name="button_send_notification" states="draft,confirm" string="Send notification..."
                                class="oe_highlight"  type="object" groups="base.group_user" context="{'appointment_id':active_id}"/>
                    </xpath>
                    
                </data>
            </field>
        </record>
         
        <record id="view_res_user_form_inherits" model="ir.ui.view">
            <field name="name">res.users.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <data>                    
                    <xpath expr="//field[@name='active']" position="after">
                         <newline/>
                         <field name="receive_patient_notification"/>
                    </xpath>
                    
                    <xpath expr="//page[@string='Access Rights']" position="after">
                         <page string="Patient Notifications">
	                         <group col="4" colspan="4"> 
		                 	    <field name="notify_before"/>
		                 	    <field name="unit_time"/>
	                 	    </group>
	                 	    <newline/>
	                 	    <group col="4" colspan="4">                 	    
		                 	    <field name="first_monthly"/>
		                 	    <field name="third_monthly"/>
		                 	    <field name="sixth_monthly"/>
		                 	    <field name="nineth_monthly"/>
		                 	    <field name="yearly"/>
	                 	    </group>
	                 	    <newline/>
	                 	    <group col="4" colspan="4"> 
		                 	    <field name="show_notification"/>
		                 	    <field name="show_unit_time"/>		                 	       
	                 	    </group>   
                         </page>
                    </xpath>
                </data>
            </field>
        </record>          
        
        <!-- Notification --> 
        <record model="ir.actions.client" id="action_patien_notification">
            <field name="name">Show Operated Patients Notification</field>
            <field name="tag">notify.patient</field>
        </record>
        
		<menuitem id="oemedical_patient_notification" name="Operated Patient Notifications"
			parent="oemedical.oemedical_appoitment_root" action="action_patien_notification"
			sequence="30" />
        
                        
    </data>
</openerp>
