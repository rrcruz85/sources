<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="confirm_invoice_line_wizard_view_tree" model="ir.ui.view">
            <field name="name">confirm.invoice.line.wizard.view.tree</field>
            <field name="model">confirm.invoice.line.wizard</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Supplier Invoice Lines" editable="bottom">
                    <field name="invoice_id" invisible='1'/>
                    <field name="pedido_id" invisible='1'/>
                    <field name="detalle_id" invisible='1'/>
                    <field name="line_number"/>
                    <field name="type" required="1"/>
                    <field name="supplier_id" required="1" domain="[('supplier','=', True)]" context="{'default_supplier': True, 'default_customer': False}"/>
                    <field name="product_id" required="1" on_change="on_change_variety(pedido_id,supplier_id,product_id,variant_id,length)"/>
                    <field name="variant_id"  required="1" domain="[('product_id','=', product_id)]" on_change="on_change_variety(pedido_id,supplier_id,product_id,variant_id,length)"/>
                    <field name="subclient_id"  required="1"/>
                    <field name="length"  required="1" on_change="on_change_variety(pedido_id,supplier_id,product_id,variant_id,length)"/>
                    <field name="uom"  required="1" on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"/>
                    <field name="is_box_qty"   on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"/>
                    <field name="qty" on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"
                           required="1"/>
                    <field name="bunch_per_box" on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"
                           required="1"/>
                    <field name="bunch_type" on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"
                           required="1"/>
                    <field name="qty_bxs"/>
                    <field name="boxes" readonly="1" sum="Boxes"/>
                    <field name="purchase_price" on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"
                           required="1"/>
                    <field name="total_purchase" readonly="1" sum="Total"/>
                    <field name="sale_price" on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"
                           required="1"/>
                    <field name="total_sale" readonly="1" sum="Total"/>
                </tree>
            </field>
        </record>

        <record id="confirm_invoice_line_wizard_view_form" model="ir.ui.view">
            <field name="name">confirm.invoice.line.wizard.view.form</field>
            <field name="model">confirm.invoice.line.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Supplier Invoice Lines">
                    <field name="invoice_id" invisible='1'/>
                    <field name="detalle_id" invisible='1'/>
                    <field name="pedido_id" invisible='1'/>
                    <field name="product_id" readonly="1" required="1"/>
                    <field name="variant_id" readonly="1" required="1" domain="[('product_id','=', product_id)]"/>
                    <field name="length" readonly="1" required="1"/>
                    <field name="subclient_id" readonly="1" required="1"/>
                    <field name="uom" readonly="1" required="1"
                           on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"/>
                    <field name="is_box_qty" readonly="1"
                           on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"/>
                    <field name="bunch_per_box" readonly="1"
                           on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"
                           required="1"/>
                    <field name="bunch_type" readonly="1"
                           on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"
                           required="1"/>
                    <field name="qty" readonly="1"
                           on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"
                           required="1"/>
                    <field name="boxes" readonly="1" sum="Boxes"/>
                    <field name="purchase_price" readonly="1"
                           on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"
                           required="1"/>
                    <field name="total_purchase" readonly="1" sum="Total"/>
                    <field name="sale_price" readonly="1"
                           on_change="on_change_vals(qty,purchase_price,sale_price,uom,is_box_qty,bunch_per_box,bunch_type)"
                           required="1"/>
                    <field name="total_sale" readonly="1" sum="Total"/>
                </form>
            </field>
        </record>
        
        <!-- FORM VIEW -->
        <record id="confirm_invoice_wizard_view_form" model="ir.ui.view">
            <field name="name">confirm.invoice.wizard.view.form</field>
            <field name="model">confirm.invoice.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Confirm Supplier Invoice" version="7.0">
                    <sheet>
                        <group col="8">
                            <field name="pedido_id"  attrs = "{'readonly':[('confirmada','=', True)]}" colspan="4" required="1" on_change="on_change_pedido(pedido_id)" context="{'from_wizard_request':1}"/>
                            <newline/>
                            <field name="supplier_id" attrs = "{'readonly':[('confirmada','=', True)]}" colspan="4" required="1" on_change="on_change_pedido_supplier(pedido_id,supplier_id,context)" domain="[('supplier','=', True)]" context="{'default_supplier': True, 'default_customer': False,'from_wizard_rqt':pedido_id}"/>
                            <newline/>
                            <field name="line_ids" attrs = "{'readonly':[('confirmada','=', True)]}" colspan="8" context="{'invoice_id':active_id,'supplier_id': supplier_id,'pedido_id':pedido_id,'lines':line_ids}"/>
                            <newline/>
                            <field name="invoice_number" colspan="4" required="1"/>
                            <field name="date_invoice" colspan="4" required="1"/>
                            <newline/>
                            <field name="account_id" colspan="4" required="1"/>
                            <newline/>
                            <field name="fiscal_position" required="1" colspan="4"/>
                            <field name="period_id" required="1" colspan="4"/>
                            <newline/>
                            <field name="currency_id" required="1" colspan="4"/>
                            <field name="journal_id" required="1" colspan="4"/>
                            <newline/>
                            <field name="company_id" required="1" colspan="4"/>
                            <field name="user_id" required="1" colspan="4"/>
                            <field name="next" invisible="1"/>
                            <field name="confirmada" invisible="1"/>
                        </group>
                        <footer>
                            <button name="confirm_invoice" string="Confirm" type="object" class="oe_highlight" context="{'line_ids': line_ids,'from_wizard_request':True}" attrs = "{'invisible':[('confirmada','=', True)]}"/>
                            <button name="regresar" string="Regresar" type="object" class="oe_highlight" attrs = "{'invisible':[('confirmada','=', False)]}"/>
                            <button name="generate_invoice" string="Generar Factura" type="object" class="oe_highlight" attrs = "{'invisible':[('confirmada','=', False)]}"/>
                        	or <button string="Cancel" class="oe_link" special="cancel" />
	            		</footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="confirm_windows_wizard_view_form" model="ir.ui.view">
            <field name="name">confirm.windows.wizard.view.form</field>
            <field name="model">confirm.windows.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Confirmar" version="7.0">
                    <group colspan="4">
                        <label string="Â¿Desea proceder a generar la factura del proveedor?" colspan="4"/>
                    </group>
                    <footer>
                        <button name="generate_invoice" string="Generar" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_confirm_invoice_wizard" model="ir.actions.act_window">
            <field name="name">Confirm Supplier Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">confirm.invoice.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="confirm_invoice_wizard_view_form"/>
        </record>

        <menuitem name="Confirmar Factura Proveedor" action="action_confirm_invoice_wizard" id="menu_confirm_invoice_wizard" parent="menu_pedido_cliente_menu" sequence="3"/>

    </data>
</openerp>