<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_pos_most_sold_product_wzd" model="ir.ui.view">
            <field name="name">Most Sold Products Report</field>
            <field name="model">pos.most.sold.product.wzd</field>
            <field name="arch" type="xml">
                <form string="Most Sold Products Report">
                    <group col="4">
                        <field name="nbr_product" required="1"/>
                        <newline/>
                        <field name="date_start" required="1"/>
                        <field name="date_end" required="1"/>
                    </group>
                    <h3>Customers:</h3>
                    <field name="partner_ids" domain="[('customer','=',True)]"/>
                    <footer>
                        <button name="print_report" type="object" string="Print Report" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_pos_most_sold_product_wzd" model="ir.actions.act_window">
            <field name="name">Most Sold Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.most.sold.product.wzd</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_pos_most_sold_product_wzd" id="menu_pos_most_sold_product_wzd" parent="point_of_sale.menu_point_rep" sequence="5"/>

        <template id="report_pos_most_sold_product">
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <div class="page">
                        <div>
                            <div class="text-left">
                                <!--h2 t-if="data['nbr_product'] == '1'">Most Sold Product by Customers</h2 -->
                                <h2>Most Sold Products by Customers</h2>
                                <br/>
                                <h5>From:</h5>
                                <h5>Until:</h5>
                                <br/>
                            </div>
                            <br/>
                            <div>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th class="text-right">Quantity</th>
                                            <th class="text-right">Price</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <!--
                                        <tr t-foreach="docs" t-as="line">
                                            <td>
                                                <span t-field="line.product_id"/>
                                            </td>

                                            <td class="text-right">

                                            </td>
                                        </tr>
                                         -->
                                    </tbody>


                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <report
                id="action_report_pos_most_sold_product"
                string="Pos Most Sold Product"
                model="pos.most.sold.product.rpt"
                report_type="qweb-pdf"
                name="my_point_of_sale.report_pos_most_sold_product"
                file="my_point_of_sale.report_pos_most_sold_product"
        />

    </data>
</openerp>
